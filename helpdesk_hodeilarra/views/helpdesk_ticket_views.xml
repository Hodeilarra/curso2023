<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="helpdesk_ticket_action" model="ir.actions.act_window">
        <field name="name">Helpdesk Tickets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_mode">kanban,tree,form</field>

        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new ticket
            </p>
        </field>
    </record>


    <record id="view_helpdesk_ticket_tree" model="ir.ui.view">
        <field name="name">view.helpdesk.ticket.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <tree string="Tickets" decoration-info="state == 'new'" decoration-muted="state == 'canceled'" decoration-success="state in ('assigned', 'in_process')" decoration-warning="state == 'pending'" decoration-danger="state == 'resolved'">
                <field name="sequence" widget="handle"/>
                <field name="nombre"/>
                <field name="description"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="date" optional="show"/>
                <field name="date_limit" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="view_helpdesk_ticket_form" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="new,assigned,in_process,pending,resolved,canceled"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="nombre"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="date_limit"/>
                        </group>

                        <group>
                            <field name="user_id"/>
                            <field name="tag_ids" widget="many2many_tags"/>

                        </group>
                    </group>

                    <notebook>
                        <page string="Description" name="description">
                            <button string="Update only this" name="update_description" type="object" class="btn-primary"/>
                            <button string="Update all description" name="update_other_description" type="object" class="btn-primary"/>
                            <field name="description"/>
                        </page>


                        <page string="To do" name="actions_todo">
                            <field name="actions_todo"/>
                        </page>
                        <page string="Actions" name="actions">
                            <!-- <label for="actions_todo" string="To Do"/> -->
                            <button string="Set all as done" name="set_actions_as_done" type="object"/>
                            <field name="action_ids">
                                <tree string="Actions">
                                    <field name="name"/>
                                    <field name="state"/>
                                </tree>
                                <form>
                                    <button string="Set done" name="set_done" type="object" class="btn-primary"/>
                                    <button string="Set todo" name="set_todo" type="object" class="btn-primary"/>
                                    <group>
                                        <field name="name"/>
                                        <field name="state" readonly="1"/>
                                    </group>
                                </form>
                            </field>
                        </page>

                    </notebook>



                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="helpdesk_menu" name="Helpdesk" sequence="10"/>

    <menuitem id="helpdesk_ticket_open" name="Tickets" sequence="10" parent="helpdesk_menu" action="helpdesk_ticket_action"/>

</odoo>